<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <!-- BACK BUTTON (VISIBLE ONLY FROM ORDER HISTORY) -->

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back"
        android:padding="8dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />


    <!-- ================= SCROLLABLE CONTENT ================= -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/continueShopping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <!-- ORDER ITEMS TITLE -->
            <TextView
                android:id="@+id/orderItemsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Items"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <!-- IMAGE SLIDER -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/orderPager"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="12dp" />

            <!-- SUCCESS TITLE -->
            <TextView
                android:id="@+id/orderSuccessTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Successful"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <!-- PAYMENT STATUS -->
            <TextView
                android:id="@+id/paymentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Status: PAID"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <!-- ORDER DETAILS CARD -->
            <LinearLayout
                android:id="@+id/orderDetailsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/common_bg_12radius"
                android:padding="16dp"
                android:layout_marginTop="20dp">

                <!-- ORDERED ITEMS LIST -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/orderItemsRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginBottom="12dp" />

                <!-- ORDER ID LABEL -->
                <TextView
                    android:id="@+id/orderIdLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order ID"
                    android:textStyle="bold" />

                <!-- ORDER ID VALUE -->
                <TextView
                    android:id="@+id/orderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkGrey" />

                <!-- DIVIDER -->
                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="@color/lightGrey" />

                <!-- AMOUNT LABEL -->
                <TextView
                    android:id="@+id/amountLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount Paid"
                    android:textStyle="bold" />

                <!-- AMOUNT VALUE -->
                <TextView
                    android:id="@+id/amountPaid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- TRACKING TITLE -->
            <TextView
                android:id="@+id/trackingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Tracking"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="24dp" />

            <!-- ================= 3 STEP DOT TRACKING ================= -->
            <LinearLayout
                android:id="@+id/trackingContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <!-- SHIPPED -->
                <LinearLayout
                    android:id="@+id/stepShipped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <View
                        android:id="@+id/dotShipped"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/dot_active" />

                    <TextView
                        android:id="@+id/labelShipped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shipped"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <!-- LINE -->
                <View
                    android:id="@+id/line1"
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="@color/lightGrey"
                    android:layout_marginHorizontal="8dp" />

                <!-- OUT FOR DELIVERY -->
                <LinearLayout
                    android:id="@+id/stepOFD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <View
                        android:id="@+id/dotOFD"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/dot_inactive" />

                    <TextView
                        android:id="@+id/labelOFD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Out for Delivery"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <!-- LINE -->
                <View
                    android:id="@+id/line2"
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="@color/lightGrey"
                    android:layout_marginHorizontal="8dp" />

                <!-- DELIVERED -->
                <LinearLayout
                    android:id="@+id/stepDelivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <View
                        android:id="@+id/dotDelivered"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/dot_inactive" />

                    <TextView
                        android:id="@+id/labelDelivered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivered"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- SPACE FOR BOTTOM BUTTON -->
            <View
                android:id="@+id/bottomSpacer"
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>
    </ScrollView>

    <!-- ================= FIXED BOTTOM BUTTON ================= -->
    <TextView
        android:id="@+id/continueShopping"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CONTINUE SHOPPING"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="16dp"
        android:background="@drawable/common_bg_12radius"
        android:backgroundTint="@color/blue"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
