<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomeScreenActivity">
   <include
       android:id="@+id/toolbar_home"
       layout="@layout/toolbar_home"/>
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_home"
        android:layout_above="@id/bottomNav"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar_home"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="12dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/searchBar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="What are you looking for ?"
                android:padding="12dp"
                style="@style/inter_400_12_24"
                android:drawableLeft="@drawable/search_icon"
                android:drawablePadding="12dp"
                android:background="@drawable/common_bg_12radius"/>
          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/brandlist"
              android:layout_width="match_parent"
              android:layout_marginTop="18dp"
              app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
              android:layout_height="wrap_content"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="12dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/brandImageCarousel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:clipChildren="false"/>

                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/dotsIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dotsSize="6dp"
                    app:dotsColor="@color/lightGrey"
                    app:dotsSpacing="2dp"
                    app:dotsWidthFactor="2.5"
                    app:selectedDotColor="@color/blue"
                    app:dotsCornerRadius="8dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="12dp"/>

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/recommendationId"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/inter_semi_400_18_24"
                    android:textColor="@color/black"
                    android:text="Recommendation"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See all"
                    android:textColor="@color/blue"
                    android:gravity="center_horizontal"
                    android:layout_alignParentEnd="true"/>

        </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/allItem"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="wrap_content"
        android:id="@+id/bottomNav"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bottom_nav_bg"
        android:layout_alignParentBottom="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="18dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/btn_1"/>
        <ImageView
            android:id="@+id/cart"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="18dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/btn_2"/>
        <ImageView
            android:id="@+id/wishlist"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="18dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/btn_3"/>
        <ImageView
            android:id="@+id/profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="18dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/btn_5"/>
    </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>