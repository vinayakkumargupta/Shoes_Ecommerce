<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- PROFILE PANEL -->
    <LinearLayout
        android:id="@+id/profileContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="130dp"
        android:elevation="6dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/common_bg_12radius"
        android:orientation="vertical">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/closeBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Profile"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- USER INFO -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vinayak Kumar"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="16dp"/>

        <TextView
            android:id="@+id/userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: VK12345"
            android:textColor="@android:color/darker_gray"
            android:paddingStart="16dp"
            android:paddingBottom="24dp"/>

        <!-- MENU ITEMS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/accountItem"
                style="@style/ProfileMenuItem"
                android:text="Account"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/ordersItem"
                style="@style/ProfileMenuItem"
                android:text="Orders"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/helpItem"
                style="@style/ProfileMenuItem"
                android:text="Help"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tcItem"
                style="@style/ProfileMenuItem"
                android:text="@string/terms_conditions"/>
        </LinearLayout>

        <!-- SPACE -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- LOGOUT -->
        <TextView
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_red_dark"
            android:gravity="center"
            android:padding="20dp"/>
    </LinearLayout>

</FrameLayout>
